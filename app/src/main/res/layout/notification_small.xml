<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@id/noti_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/noti_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="13.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@id/noti_prev_button"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_marginStart="10.0dip"
            android:src="@drawable/ic_previous_black" />

        <ImageView
            android:id="@id/noti_play_button"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_marginStart="10.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_play_accent" />

        <ImageView
            android:id="@id/noti_next_button"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_marginStart="10.0dip"
            android:src="@drawable/ic_next_black" />
    </LinearLayout>
</LinearLayout>